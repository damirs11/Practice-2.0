{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@api/*": [
                "src/app/api/*"
            ],
            "@components/*": [
                "src/app/components/*"
            ],
            "@pages/*": [
                "src/app/pages/*"
            ],
            "@shared/*": [
                "src/app/shared/*"
            ],
            "@env/*": [
                "src/environments/*"
            ]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
